{% import "_includes/forms" as forms %}

{% do view.registerAssetBundle("dispositiontools\\persistiveutm\\assetbundles\\persistiveutm\\PersistiveutmAsset") %}


{{ forms.lightswitchField({
    label: 'Enable persistive utms',
    instructions: 'Lets you track the source of elements',
    id: 'enablePersistiveUtm',
    name: 'enablePersistiveUtm',
    on: settings['enablePersistiveUtm']})
}}

{{ forms.lightswitchField({
    label: 'Use Javascript',
    instructions: 'Vital if you are using cache',
    id: 'useJs',
    name: 'useJs',
    on: settings['useJs']})
}}


{{ forms.lightswitchField({
    label: 'Save utm details for new Freeform Submissions',
    id: 'activateFreeform',
    name: 'activateFreeform',
    on: settings['activateFreeform']})
}}

{{ forms.lightswitchField({
    label: 'Save utm details for new Orders',
    id: 'activateCommerce',
    name: 'activateCommerce',
    on: settings['activateCommerce']})
}}

{{ forms.lightswitchField({
    label: 'Save utm details for new Users',
    id: 'activateUser',
    name: 'activateUser',
    on: settings['activateUser']})
}}


